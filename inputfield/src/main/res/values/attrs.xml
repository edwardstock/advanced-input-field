<resources>

    <declare-styleable name="IF_EditText">
        <attr name="android:digits" />
        <attr name="android:inputType" />
    </declare-styleable>

    <declare-styleable name="InputField">
        <attr name="android:inputType" />
        <attr name="android:imeOptions" />
        <attr name="android:digits" />
        <attr name="android:enabled" />
        <attr name="android:text" />
        <attr name="android:hint" />
        <attr name="android:textSize" />
        <attr name="android:fontFamily" />
        <attr name="android:textColor" />
        <attr name="android:textColorHint" />
        <attr name="android:maxLength" />
        <attr name="android:autofillHints" />
        <attr name="android:textAllCaps" />
        <attr name="android:nextFocusDown" />

        <attr name="android:maxLines" />
        <attr name="android:singleLine" />

        <attr name="suffixType" format="enum">
            <enum name="text" value="0" />
            <enum name="image" value="1" />
        </attr>
        <attr name="suffixImageStyle" format="reference" />
        <attr name="suffixImageSrc" format="reference" />
        <attr name="suffixImageWidth" format="dimension" />
        <attr name="suffixImageHeight" format="dimension" />
        <attr name="suffixImagePadding" format="dimension" />
        <attr name="suffixImageMargin" format="dimension" />
        <attr name="suffixImageTint" format="color" />

        <attr name="suffixText" format="string" />
        <attr name="suffixTextStyle" format="reference" />
        <attr name="suffixTextAppearance" format="reference" />

        <attr name="label" format="string" />
        <attr name="labelEnabled" format="boolean" />
        <attr name="labelStyle" format="reference" />
        <attr name="labelTextAppearance" format="reference" />

        <attr name="errorEnabled" format="boolean" />
        <attr name="errorStyle" format="reference" />
        <attr name="errorTextAppearance" format="reference" />

        <attr name="fieldName" format="string" />
        <attr name="inputStyle" format="reference" />
        <attr name="inputTextAppearance" format="reference" />
        <attr name="inputOverlay" format="reference" />
        <attr name="inputOverlayVisible" format="boolean" />
        <attr name="inputMinHeight" format="dimension" />
        <attr name="inputBackground" format="reference" />
        <attr name="inputDisableSuggestions" format="boolean" />

    </declare-styleable>

    <declare-styleable name="InputFieldAutocomplete">
        <attr name="android:dropDownAnchor" />
        <attr name="android:dropDownHorizontalOffset" />
        <attr name="android:dropDownVerticalOffset" />
    </declare-styleable>
</resources>