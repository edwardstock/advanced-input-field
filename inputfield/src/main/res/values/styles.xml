<resources>

    <style name="InputField">
        <item name="inputMinHeight">48dp</item>
        <item name="android:textColorHint">@color/aif_grey</item>
        <item name="inputBackground">@drawable/aif_edittext_states</item>
        <item name="labelEnabled">true</item>
        <item name="labelTextAppearance">@style/InputFieldLabelTextAppearance</item>
        <item name="errorTextAppearance">@style/InputFieldErrorTextAppearance</item>
        <item name="inputTextAppearance">@style/InputFieldInputTextAppearance</item>
        <item name="suffixMenuStyle">@style/InputFieldSuffixMenuStyle</item>
        <item name="suffixMenuItemStyle">@style/InputFieldSuffixMenuItemStyle</item>
    </style>

    <style name="InputFieldInputTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/aif_text_color</item>
    </style>

    <style name="InputFieldLabelTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/aif_grey</item>
        <item name="colorControlNormal">@color/aif_grey</item>
        <item name="colorControlActivated">@color/aif_grey</item>
    </style>

    <style name="InputFieldErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/aif_error_color</item>
    </style>

    <style name="InputFieldSuffixMenuStyle">
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">2dp</item>
        <!--        <item name="android:background">@color/aif_grey</item>-->
    </style>

    <style name="InputFieldSuffixMenuItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:tint">@color/aif_error_color</item>
        <item name="android:tintMode">src_in</item>
    </style>

</resources>