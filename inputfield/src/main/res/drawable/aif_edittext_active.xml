<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#D4CAF0" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#F6F4FC" />
            <padding
                android:bottom="14dp"
                android:left="16dp"
                android:right="16dp"
                android:top="14dp" />
        </shape>
    </item>

</layer-list>